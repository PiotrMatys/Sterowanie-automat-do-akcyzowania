                    itoa(licznik_cykli,dupa);
                    lcd_puts(dupa);
                    lcd_gotoxy(0,1);
                    lcd_puts("DAWKA KLEJU");
                    lcd_gotoxy(13,1);
                    itoa(dawka_kleju,dupa);
                    dawka_kleju_wyswietlona = dawka_kleju;
                    lcd_puts(dupa);
                    licznik_wyswietlen_jak_stoi = 0;
                    }
        }
       

                                   //run                                                                //ZMIANA STANU
   if(wyzerowalem_krancowke == 1 & PINB.0 == 0 & dostep_do_podajnika == 0 & podajnik_gotowy == 1 & zatrzymalem_kubek == 1 & jest_klej == 1 | pracuje == 1)
            {  
            praca_prawo();
            pracuje = 1;
            if(wykonano_2 == 1)
                   {
                   praca_lewo();
                   zeruj_flagi();
                   licznik_cykli++;
                   if(jest_klej == 1)
                    {
                    lcd_clear();
                    lcd_gotoxy(0,0);
                    lcd_puts("NUMER");
                    lcd_gotoxy(7,0);
                    itoa(licznik_cykli,dupa);
                    lcd_puts(dupa);
                    lcd_gotoxy(0,1);
                    lcd_puts("DAWKA KLEJU");
                    lcd_gotoxy(13,1);
                    itoa(dawka_kleju,dupa);
                    lcd_puts(dupa);
                    dawka_kleju_wyswietlona = dawka_kleju;
                    }
                   if(PINB.7 == 1)  //to stary B.2   
                      podajnik_gotowy = 1;
                   pracuje = 0;
                   }
            }
     
       }


}


